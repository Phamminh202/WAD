@model List<T2010A_WAD.Models.Category>
@{
    ViewBag.Title = "Categories";

    var count = 0;
    //T2010A_WAD.Models.Category cat = ViewBag.Category;
}

<h2>Categories</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["PageTitles"]</h3>
                <h4 class="card-title">@ViewBag.PageTitle: @count</h4>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var cat in Model)
                      {


                        <tr>
                            <td>@cat.Id</td>
                            <td>@cat.CategoryName</td>
                            <td>@cat.CategoryImage</td>
                            <td>
                                <a href="/Categories/Edit/@cat.Id">Edit</a>
                                <a onclick="return confirm('You are sure?')" href="/Categories/Delete/@cat.Id" class="text-danger">Delete</a>
                            </td>                            
                        </tr>
                      }                        
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
